{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@jpeg-encoder/core": [
                "./packages/core/src/index.ts"
            ],
            "@jpeg-encoder/cli/*": [
                "./packages/cli/src/*"
            ],
            "@/*": [
                "./apps/web/src/*"
            ]
        }
    },
    "include": [
        "packages/**/*",
        "apps/**/*",
        "examples/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/dist",
        "**/*.spec.ts"
    ]
}